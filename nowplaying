#!/bin/bash

buttons=" ^ca(1, mpc prev) ^i(/usr/share/icons/starch_icons/back1.xbm) ^ca() ^ca(1, mpc pause) ^i(/usr/share/icons/starch_icons/pause1.xbm) ^ca() ^ca(1, mpc play) ^i(/usr/share/icons/starch_icons/play1.xbm) ^ca() ^ca(1, mpc next) ^i(/usr/share/icons/starch_icons/forward1.xbm) ^ca() "

(echo "$buttons"; sleep 10) | dzen2 -bg '#252627' -fg '#618485' -fn '-*-*-medium-r-*-*-9-*-*-*-*-*-*-*' -y 16 -x 840 -w 100 -h 15 -e 'onstart=uncollapse;button2=exit;button3=exit;button4=exit;button5=exit'
